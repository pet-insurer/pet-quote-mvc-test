@using PetInsurance.Shared.Models
@model List<Policy>
@{
    ViewData["Title"] = "Issued Policies";
}

<h2 class="my-4">Issued Policies</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No policies issued yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Pet</th>
                    <th>Owner</th>
                    <th>Cover Level</th>
                    <th class="text-end">Premium</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var policy in Model)
                {
                    <tr>
                        <td>
                            <strong>@policy.Request.Pet.Name</strong><br />
                            <small>@policy.Request.Pet.Breed, Age @policy.Request.Pet.Age</small>
                        </td>
                        <td>@policy.Request.Owner.FirstName @policy.Request.Owner.LastName</td>
                        <td>@policy.Request.CoverLevel</td>
                        <td class="text-end">$@policy.Premium.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}